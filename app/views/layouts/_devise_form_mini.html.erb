      <div class="form-group">
        <%= f.text_field :email, :placeholder => "Email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :placeholder => "HasÅ‚o", class: "form-control"  %>
      </div>
      <%= f.submit 'Zaloguj', class: "btn btn-primary" %>
      <%= link_to "Zarejestruj", new_user_registration_path, class: "btn btn-info" %>
    <% end %>
  <% end %>
</div>
