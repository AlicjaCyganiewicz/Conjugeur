<div>
  <%= form_for(@form, url: exercise_settings_path) do |f| %>
    <%= f.render_errors %>
    <div class="form-group row">
      <label class="col-sm-1">Czasy gramatyczne</label>
      <div class="col-sm-11">
        <button type="button" class="btn btn-info btn-sm x-check-all-tenses" data-value="false">Zaznacz wszystkie czasy</button>
        <br>
        <div class="x-all-tenses">
          <%= render partial: "exercise_settings/elements/labeled_multiple_checkbox", collection: Conjugation::Tense.all, as: :tense, locals: { f: f, key: :tenses } %>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-1">Grupy czasowników</label>
      <div class="col-sm-11">
        <button type="button" class="btn btn-info btn-sm x-check-all-groups" data-value="false">Zaznacz wszystkie grupy</button>
        <br>
        <div class="x-all-groups">
          <%= render partial: "exercise_settings/elements/multiple_checkbox", collection: (1..3).to_a, as: :el, locals: { f: f, key: :groups } %>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label(:excluded_verbs, class: 'col-sm-2') %>
      <div class="col-sm-10">
        <%= text_field_tag(:excluded, nil, class: 'x-autocomplete') %>
        <%= f.hidden_field(:excluded_verbs, class: 'x-verbs-hidden') %>
        <div class="x-verbs-result"></div>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label(:included_verbs, class: 'col-sm-2') %>
      <div class="col-sm-10">
        <%= text_field_tag(:included, nil, class: 'x-autocomplete') %>
        <%= f.hidden_field(:included_verbs, class: 'x-verbs-hidden') %>
        <div class="x-verbs-result"></div>
      </div>
    </div>
    <%= f.submit("Ćwiczenia: start!", class: "btn btn-primary btn-lg btn-block") %>
  <% end %>
</div>

<script>
  $(document).on("page:change", (new ExerciseSettingsForm).init());
</script>
