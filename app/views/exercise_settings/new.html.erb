<div>
  <%= form_for(@context.form, as: :exercise_settings_form, url: exercise_settings_path) do |f| %>
    <%= f.render_errors %>
    <div class="form-group row">
      <label class="col-sm-1">Czasy gramatyczne</label>
      <div class="col-sm-11">
        <button type="button" class="btn btn-info btn-sm x-check-all" data-value="false" data-label="czasy">Zaznacz wszystkie czasy</button>
        <br>
        <div class="x-all-fields">
          <%= render partial: "exercise_settings/elements/labeled_multiple_checkbox", collection: Conjugation::Tense.all, as: :tense, locals: { f: f, key: :tenses } %>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-1">Grupy czasowników</label>
      <div class="col-sm-11">
        <button type="button" class="btn btn-info btn-sm x-check-all" data-value="false" data-label="grupy">Zaznacz wszystkie grupy</button>
        <br>
        <div class="x-all-fields">
          <%= render partial: "exercise_settings/elements/multiple_checkbox", collection: (1..3).to_a, as: :el, locals: { f: f, key: :groups } %>
        </div>
      </div>
    </div>
    <div class="form-group row x-excluded-verbs-container">
      <%= render partial: "exercise_settings/elements/excluded_verbs", locals: { f: f, presenter: @context.presenter } %>
    </div>

    <div class="form-group row x-included-verbs-container">
      <%= render partial: "exercise_settings/elements/included_verbs", locals: { f: f, presenter: @context.presenter } %>
    </div>
    <%= f.submit("Ćwiczenia: start!", class: "btn btn-primary btn-lg btn-block") %>
  <% end %>
</div>

<script>
  $(document).on("page:change", (new ExerciseSettingsForm).init());
</script>
